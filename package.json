{
  "name": "battleship-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:webapp": "turbo run --filter webapp build",
    "dev": "env-cmd turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "deploy": "turbo run deploy",
    "deploy:webapp": "turbo run --filter webapp deploy",
    "deploy:server-client": "turbo run --filter server-client deploy"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.7.1"
}