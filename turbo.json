{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^@battleship/schema#build", "^@battleship/domain#build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "persistent": true
    },
    "check": {
      "dependsOn": ["^build"]
    },
    "check:fix": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "deploy": {
      "dependsOn": ["build", "check", "typecheck"]
    },
    "deploy:sync": {
      "dependsOn": ["build"]
    },
    "deploy:api": {
      "dependsOn": ["build"]
    }
  }
}